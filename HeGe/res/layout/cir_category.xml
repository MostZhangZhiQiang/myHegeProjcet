<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/pro_column01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pro_column01"
                android:onClick="goCategroy" />

            <TextView
                android:id="@+id/tv_column01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="轻钢别墅"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/pro_column03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pro_column03"
                android:onClick="goCategroy" />

            <TextView
                android:id="@+id/tv_column03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动房"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pro_column05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pro_column05"
                android:onClick="goCategroy" />

            <TextView
                android:id="@+id/tv_column05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夹芯板"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/pro_column02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pro_column02" 
                android:onClick="goCategroy"/>

            <TextView
                android:id="@+id/tv_column02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="集装箱活动房"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/pro_column04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pro_column04" 
                android:onClick="goCategroy"/>

            <TextView
                android:id="@+id/tv_column04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="轻钢建筑"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>